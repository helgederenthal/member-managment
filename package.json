{
  "name": "electron-cra-typescript",
  "version": "0.1.0",
  "description": "Sample application for React in Electron with included GraphQL API",
  "author": "Helge Derenthal",
  "private": true,
  "homepage": "./",
  "main": "./buildMain/index.js",
  "scripts": {
    "dev": "concurrently \"pnpm run react-start\" \"pnpm run main-start\"",
    "watch": "concurrently \"pnpm run main-watch\" \"pnpm run react-watch\"",
    "build": "pnpm run react-build && pnpm run main-build",
    "main-start": "tsc -p tsconfig.electronMain.json && pnpm run copyAssets && wait-on http://localhost:3000/ && cross-env NODE_ENV=development electron .",
    "main-watch": "tsc -w -p tsconfig.electronMain.json",
    "main-build": "tsc -p tsconfig.electronMain.json && pnpm run copyAssets && electron-builder",
    "react-start": "craco start",
    "react-watch": "tsc -w -p tsconfig.json",
    "react-build": "craco build",
    "copyAssets": "cp -f main/Data.xlsx buildMain"
  },
  "dependencies": {
    "@apollo/client": "^3.5.9",
    "apollo-server": "^3.6.2",
    "class-validator": "^0.13.2",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-react-titlebar": "^1.1.0",
    "fs": "^0.0.1-security",
    "graphql": "^15.3.0",
    "graphql-scalars": "^1.14.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "path": "^0.12.7",
    "react": "^17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "^6.2.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "url": "^0.11.0",
    "wait-on": "^7.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": ">=7.0.0-0 <8.0.0",
    "@babel/plugin-syntax-flow": "^7.14.5",
    "@babel/plugin-transform-react-jsx": "^7.14.9",
    "@craco/craco": "^7.0.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^18.11.18",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "postcss": "^8.1.0",
    "react-scripts": "^5.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "build": {
    "productName": "Member-Management",
    "appId": "com.acme.electron.react.graphql",
    "forceCodeSigning": false,
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "extraMetadata": {
      "main": "buildMain/index.js"
    },
    "win": {
      "files": [
        "node_modules/**",
        "buildMain/**"
      ],
      "target": "portable",
      "icon": "main/appicon.png"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "arrowParens": "always",
    "printWidth": 80
  }
}
